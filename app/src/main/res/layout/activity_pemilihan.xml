<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="25dp"
        tools:context=".PemilihanActivity">

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_marginEnd="15dp"
            android:background="@drawable/bg_primary_navy">

            <TextView
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:text="Pasanagan Urut 1"
                android:background="@drawable/bg_primary"
                android:textColor="@color/navy"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="5sp"
                android:layout_gravity="center"/>

            <!--        Start Paslon-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginRight="5dp">

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:src="@drawable/kepala_daerah" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ahmad Riyadi"
                        android:layout_marginTop="15sp"
                        android:textColor="@color/white"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:src="@drawable/kepala_daerah" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jagad Raya"
                        android:layout_marginTop="15sp"
                        android:textColor="@color/white"/>
                </LinearLayout>

            </LinearLayout> <!-- End Paslon-->

            <Button
                android:id="@+id/btnPilih1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilih"
                android:background="@drawable/bg_primary"
                android:gravity="center"
                android:layout_gravity="center"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_marginEnd="15dp"
            android:background="@drawable/bg_primary_navy">

            <TextView
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:text="Pasanagan Urut 1"
                android:background="@drawable/bg_primary"
                android:textColor="@color/navy"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="5sp"
                android:layout_gravity="center"/>

            <!--        Start Paslon-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginRight="5dp">

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:src="@drawable/kepala_daerah" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ahmad Riyadi"
                        android:layout_marginTop="15sp"
                        android:textColor="@color/white"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:src="@drawable/kepala_daerah" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jagad Raya"
                        android:layout_marginTop="15sp"
                        android:textColor="@color/white"/>
                </LinearLayout>

            </LinearLayout> <!-- End Paslon-->

            <Button
                android:id="@+id/btnPilih2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilih"
                android:background="@drawable/bg_primary"
                android:gravity="center"
                android:layout_gravity="center"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:background="@drawable/bg_primary_navy">

            <TextView
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:text="Pasanagan Urut 1"
                android:background="@drawable/bg_primary"
                android:textColor="@color/navy"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="5sp"
                android:layout_gravity="center"/>

            <!--        Start Paslon-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginRight="5dp">

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:src="@drawable/kepala_daerah" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ahmad Riyadi"
                        android:layout_marginTop="15sp"
                        android:textColor="@color/white"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:src="@drawable/kepala_daerah" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jagad Raya"
                        android:layout_marginTop="15sp"
                        android:textColor="@color/white"/>
                </LinearLayout>

            </LinearLayout> <!-- End Paslon-->

            <Button
                android:id="@+id/btnPilih3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilih"
                android:background="@drawable/bg_primary"
                android:gravity="center"
                android:layout_gravity="center"/>

        </LinearLayout>
    </LinearLayout>

</HorizontalScrollView>