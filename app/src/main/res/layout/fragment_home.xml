<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    tools:context=".fragment.HomeFragment">


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/model_produk"/>
    <LinearLayout
        android:layout_marginStart="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Halo! Selamat Datang"
            android:textSize="13sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"/>

        <TextView
            android:id="@+id/nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dava Alhaq Nur Addin"
            android:layout_marginTop="5sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15sp"/>
    </LinearLayout>
</LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="50dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="25sp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Buat Memilih Pilkades"
            android:background="@drawable/bg_primary"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="25sp"
            android:gravity="center"
            android:text="Buat Kandidat Pilkades"
            android:layout_alignParentEnd="true"
            android:textStyle="bold"
            android:background="@drawable/bg_primary_navy"
            android:textColor="@color/white"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="50dp">

        <TextView
            android:id="@+id/txtRiwayatPemilihan"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="25sp"
            android:gravity="center"
            android:text="Riwayat Pemilihan"
            android:textStyle="bold"
            android:background="@drawable/bg_primary_navy"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="25sp"
            android:gravity="center"
            android:text="Buat Akun Panitia"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:background="@drawable/bg_primary"
            android:textColor="@color/white"/>

    </RelativeLayout>

    <Button
        android:id="@+id/btnHasil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_primary_navy"
        android:text="Lihat Hasil Pemilihan"
        android:textColor="@color/white"/>

</LinearLayout>